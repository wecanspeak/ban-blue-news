{
    "manifest_version": 2,
    "name": "Ban Blue News",
    "description": "過濾傾中媒體的台灣雅虎新聞",
    "version": "0.0.1",
    "author": "Enzo Wang",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },    
    "content_scripts": [ {
        "matches":["http://tw.news.yahoo.com/*",
                   "https://tw.news.yahoo.com/*"],
        "js":["contentscript.js"],
        "run_at": "document_end"
    }],
    "icons": { 
        "16": "images/nbn_red_16.png",
        "48": "images/nbn_red_48.png",
        "128": "images/nbn_red_128.png" },	
    "permissions": [ 
        "activeTab",
        "tabs"
        ], 
    "browser_action": {
        "default_title": "Ban Blue News",
        "default_icon": "images/nbn_red_16.png"
    }
}
